<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AndroidEngineerCodeCheck" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Theme for the splash screen -->
    <style name="Theme.Splash" parent="Theme.AndroidEngineerCodeCheck">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <!-- Style for TextInputLayout with no border -->
    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
    </style>

    <style name="BoxImageViewShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
        <item name="cornerSize">16dp</item> <!-- Adjust the corner size as per your preference -->
    </style>


    <!-- Custom dialog style with rounded corners -->
    <style name="CustomDialogStyle" parent="Theme.MaterialComponents.DayNight.Dialog.Alert">
        <!-- Custom background drawable with rounded corners -->
        <item name="android:background">@drawable/dialog_background</item>
        <!-- Custom window width -->
        <item name="android:windowMinWidthMajor">80%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <!-- Custom text color and size -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
</resources>